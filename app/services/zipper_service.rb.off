# frozen_string_literal: true

require_relative 'http_helper'

class ZipperService

  def initialize(externals)
    @http = HttpHelper.new(externals, self, 'zipper', 4587)
  end

  def sha
    http.get
  end

  def zip(kata_id)
    http.get(kata_id)
  end

  def zip_tag(kata_id, avatar_name, tag)
    http.get(kata_id, avatar_name, tag)
  end

  private

  attr_reader :http

end
