
<script type="text/javascript"><!--

$(function() {

  $('.diff-traffic-light').click(function() {
    const light = $(this);
    const id         = light.data('id');
    const avatarName = light.data('avatar-name');
    const wasTag     = light.data('was-tag');
    const nowTag     = light.data('now-tag');
    window.open(cd.showReviewUrl(id, avatarName, wasTag, nowTag));
  });

  cd.pieChart($('#traffic-lights .pie'));
  cd.setupHoverTip($('[data-tip]'));

  const allTheWay = 100000;
  $('#traffic-lights').scrollLeft(allTheWay);

});

//--></script>

<table>

  <% if @minute_columns == 'true' %>
    <tr>
      <% @time_ticks.keys.sort.each_with_index do |td_no,index| %>
  		  <% seconds = @time_ticks[td_no] %>
  		  <td class="<%= parity(index) %> column">
    	    <% if seconds.class == Hash %>
  	  	    <span class="collapsed-multi-gap"></span>
          <% else %>
            <div class='time-tick' data-tip="<%= raw time_tick(seconds) %>"></div>
          <% end %>
        </td>
      <% end %>
      <td></td>
      <td></td>
      <td>
        <div class='age'
             data-tip="time between oldest and newest traffic-lights">
             <%= raw time_tick(@group.age) %>
           </div>
      </td>
    </tr>
  <% end %>

  <% @gapped.keys.sort.each do |name| %>
	<tr>
	  <% lights = @all_lights[name] %>
	  <% td_map = @gapped[name] %>
    <% now_tag = 0 %>

	  <% td_map.keys.sort.each_with_index do |td_no,index| %>
		  <% td = td_map[td_no] %>

		  <td class="<%= parity(index) %> column">
		  <% if td.class == Hash %>
		    <span class="collapsed-multi-gap"></span>
		  <% end %>
		  <% if td.class == Array %>
		    <% if td.length == 0 %>
			    <div class="gap"></div>
		    <% else %>
          <table align="right">
            <tr>
				    <% td.each do |light| %>
              <td>
                <% colour = light.colour %>
                <% was_tag = now_tag %>
                <% now_tag = light.number %>
                <%= raw diff_traffic_light(@group.id, name, colour, was_tag, now_tag) %>
              </td>
            <% end %>
            </tr>
          </table>
		    <% end %>
		  <% end %>
		  </td>
	  <% end %>

    <td class="align-right">
      <%= raw traffic_light_count(lights[-1].kata.id, name, lights) %>
    </td>

    <td class="align-center">
      <%= raw pie_chart(lights, name) %>
    </td>

    <td class="align-left valign-center">
      <%= raw diff_avatar_image(@group.id, name) %>
    </td>

	</tr>
  <% end %>
</table>
