<script type="text/javascript"><!--

$(() => {

  const progressDialog = () => {
    const id = "<%= @group.id %>";
	  $.getJSON('/dashboard/progress', { id: id }, (data) => {
      var html = '';
      var index = 0;
      html += '<div id="progress-dialog">';
      html += '<table>';
      $.each(data.animals, function(name, animal) {
        const parity = (index % 2 == 0) ? 'even' : 'odd';
        index += 1;
        html +=
          "<tr class='" + parity + " animal'>" +
            "<td class='progress'>" +
              "<img src='/images/bulb_" + animal.colour + ".png'" +
                  " alt='" + animal.colour + " traffic-light'" +
                  " width='20'" +
                  " height='20'/>" +
            '</td>' +
            '<td>' +
              "<img src='/images/avatars/" + name + ".jpg'" +
                " data-avatar='" + name + "'" +
                " width='30'" +
                " height='30'" +
                " class='avatar-image'/>" +
            '</td>' +
            "<td class='" + animal.colour + " progress'>" +
              animal.progress.text +
            '</td>' +
          '</tr>';
      }); // each
      html += '</table>';
      html += '</div>';

      const node = $(html);
      node.dialog({
        autoOpen: true,
        modal: true,
        title: cd.dialogTitle('progress?'),
        buttons: { close: () => { node.remove(); } },
        maxWidth: 600
      });

      $('.avatar-image', node).click((event) => {
        const avatar = $(event.currentTarget).data('avatar');
        const lastTag = -1;
        window.open(cd.showReviewUrl(id, avatar, lastTag, lastTag));
      });
    }); // getJSON
  };

  $('#progress-button').click(() => {
    progressDialog();
  });

});

//--></script>

<% if @group.manifest.progress_regexs != [] %>
  <div id="progress-button-container">
    <button type="button"
            title="show progress"
            id="progress-button">
      progress?
    </button>
  </div>
<% end %>
