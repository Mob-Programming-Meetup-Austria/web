    <td class="left-column">
      <table class="controls">
        <tr>
          <td><div id="resume-button-box"></div></td>
          <td><%= render partial: 'review/checkbox' %></td>
          <td><div id="fork-button-box"></div></td>
          <td><div id="checkout-button-box"></div></td>
        </tr>
      </table>
