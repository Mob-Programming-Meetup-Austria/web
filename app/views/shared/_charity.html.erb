<script type="text/javascript"><!--
'use strict';
$(() => {

  const charityButton = $('#charity-button');
  const charity = $('#charity-dialog');

  charityButton.click(() => {
    openCharityInfoDialog();
  });

  cd.createTip(charityButton, 'cyber-dojo is a registered charity');

  const openCharityInfoDialog = () => {
    const div = charity.dialog({
                width: 700,
             autoOpen: true,
        closeOnEscape: true,
                modal: true,
                title: cd.dialogTitle('charity'),
              buttons: { close: () => div.remove() }
    });
  };

});
