
<script type="text/javascript"><!--

$(function() {

  const page = $('#cyber-dojo-page');
  const appBarUpDownButton = $('#app-bar #up-down-button');

  const appBarToTop = function() {
    page.css({'padding-top':30, 'padding-bottom':0});
    $('#app-bar').appendTo('#app-bar-top');
  };
  const appBarToBottom = function() {
    page.css({'padding-top':0, 'padding-bottom':30});
    $('#app-bar').appendTo('#app-bar-bottom');
  };

  appBarUpDownButton.clickToggle(appBarToTop, appBarToBottom);

  appBarUpDownButton.click();

  cd.setTip(appBarUpDownButton, function() {
    var tip = 'Toggle app-bar to top/bottom';
    cd.showHoverTip(appBarUpDownButton, tip);
  });

});

//--></script>
