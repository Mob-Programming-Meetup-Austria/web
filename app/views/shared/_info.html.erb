
<div class="info-button">&#9432;</div>

<div id="all" style="display:none;">
<%= render partial: 'shared/charity' %>
<%= render partial: 'shared/feedback' %>
<%= render partial: 'shared/traffic_lights' %>
<%= render partial: 'shared/dashboard' %>
<%= render partial: 'shared/hotkeys' %>
<%= render partial: 'shared/shas' %>
<button type="button" id="help-button">help</button>
</div>

<script type="text/javascript">
'use strict';
$(() => {

  const helpButton = $('#help-button');

  helpButton.click(() => {
    const url = "http://blog.cyber-dojo.org/2014/10/the-cyber-dojo-history-dialog.html";
    window.open(url);
  });

  cd.createTip(helpButton, 'open help page');

  const infoButton = $('.info-button');
  infoButton.click(() => openInfoDialog());

  const openInfoDialog = () => {
    $('#all').dialog({
           autoOpen: true,
      closeOnEscape: true,
              modal: true,
              title: 'info'      
    });
  };

});
</script>
