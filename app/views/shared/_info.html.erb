
<%
  content = []
  tip = ''
  if @kata.manifest.exercise == ''
    content << @kata.manifest.display_name
    tip += 'you are doing a custom exercise'
  else
    parts = @kata.manifest.display_name.split(',')
    language = parts[0]
    test_framework = parts[1..-1].join(',')
    exercise = @kata.manifest.exercise.gsub('_',' ')
    content << language
    content << test_framework
    content << exercise
    tip += "your language is #{language}"
    tip += '<br/>'
    tip += "your test-framework is #{test_framework}"
    tip += '<br/>'
    tip += "your exercise is #{exercise}"
  end
%>
<span data-tip="<%= tip %>">
  <%= content.join(', ') %>
</span>
