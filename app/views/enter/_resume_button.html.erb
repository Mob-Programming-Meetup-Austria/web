
<script type="text/javascript"><!--

$(function() {

  const button = $('#resume-button');

  button.click(function() {
    const id = $('#full-kata-id').val();
    const cursor = button.css('cursor');
    button.prop('disabled',true).css('cursor','wait');
    $.getJSON('/enter/resume', { id: id }, function(dojo) {
      button.prop('disabled',false).css('cursor', cursor);
      cd.resumeDialog('resume programming', dojo.html);
    });
  });

});

//--></script>

<button type="button" id="resume-button">
  resume programming
</button>