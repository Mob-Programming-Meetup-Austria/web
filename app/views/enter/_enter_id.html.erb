
<script type="text/javascript"><!--

$(function() {

  const kataIdInput = $('#kata-id-input');
  const dropDown = $('#drop-down');
  const avatarGrid = $('#avatar-grid');
  const ok = $('#ok');
  // TODO: will need cancel button for when kata is full

  const autoEnter = function() {
    const id = kataIdInput.val();
    if (id.length >= 6) {
      $.getJSON('/enter/check', { id: id }, function(dojo) {
        if (dojo.exists) {
          //kataIdInput.val(''); // force id re-entry if dialog cancels
          //cd.startAnimal(dojo.full_id);
          //TODO: could be full
          avatarGrid.html(dojo.avatarGridHtml);
          kataIdInput.prop('disabled', true);
          kataIdInput.slideUp('fast', function() {
            dropDown.slideDown('slow');
          });
        }
      });
    }
  };

  ok.click(function() {
    dropDown.slideUp('slow', function() {
      kataIdInput.show()
                 .prop('disabled', false)
                 .val('')
                 .slideDown('fast')
                 .focus();
    });
  });

  // Only accept hex input.
  // Also accepts a Ctrl-V paste event which will allow
  // non-hex chars to be entered.
  kataIdInput.keypress(function(e) {
    var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
    if (e.which == 0 || e.charCode == 0) { // special key
      return true;
    }
    else if (str.match(/[a-fA-F0-9]/)) { // hex key
      return true;
    }
    else {
      e.preventDefault();
      return false;
    }
  });

  kataIdInput.keyup(function() { autoEnter(); });
  kataIdInput.focus();
  dropDown.hide();

});

//--></script>

<input title="an id contains only the digits 0123456789 and letters ABCDEF, and is case insensitive"
       type="text"
       id="kata-id-input"
       placeholder="what is its id?"
       size="8"
       value="">
</input>

<div id="drop-down">
  <div id="avatar-grid"></div>
  <button type="button" id="ok">ok</button>
</div>
