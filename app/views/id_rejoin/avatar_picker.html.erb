<script type="text/javascript"><!--
'use strict';

$(() => {
  cd.resume = (id) => {
    const url = '/kata/edit/' + id;
    window.location.href = cd.homePageUrl(id);
    window.open(url);
  };
});

//--></script>

<div>
  <table class="align-center">
    <% 8.times do |y| %>
    <tr>
      <% 8.times do |x| %>
      <td>
        <% avatar_name = @all_avatar_names[y*8 + x] %>
        <% avatar = @started_avatars[avatar_name] %>
        <% if avatar %>
          <div data-tip="<%= avatar_name %>">
            <img onclick='cd.resume("<%= avatar.kata.id %>");'
                 src="/images/avatars/<%= avatar_name %>.jpg"
                 class="avatar"
                 data-cursor="pointer"/>
          </div>
        <% else %>
          <img src="/images/avatars/<%= avatar_name %>.jpg"
               class="avatar grey"/>
        <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>
