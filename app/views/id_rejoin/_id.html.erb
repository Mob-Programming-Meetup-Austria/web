<script type="text/javascript"><!--
'use strict';
$(() => {

  const from = "<%= @from %>";

  const inputId = $('input#id');
  const dropDown = $('#drop-down');
  const hiText = $('#hi-text');
  const avatarPicker = $('#avatar-picker');
  const loText = $('#lo-text');
  const cancel = $('button#cancel');

  const inputIdHandler = () => {
    const id = inputId.val();
    if (id.length >= 6) {
      autoDropDown(id);
    }
  };

  const autoDropDown = (id) => {
    const args = { id:id, from:from };
    $.getJSON('/id_rejoin/drop_down', args,
      (response) => {
        if (from === 'group') {
          groupDropDown(response);
        }
        if (from === 'individual') {
          individualDropDown(response);
        }
      }
    );
  };

  const groupDropDown = (group) => {
    if (group.exists) {
      if (group.empty) {
        hiText.html('no one has joined yet!');
        loText.html('');
      } else {
        hiText.html('click your animal');
        loText.html('or');
      }
      avatarPicker.html(group.avatarPickerHtml);
      cd.setupHoverTips($('[data-tip]'));
      inputId.prop('disabled', true);
      inputId.slideUp('fast', () => dropDown.slideDown('slow'));
    }
  };

  const individualDropDown = (data) => {
    alert('todo');
    //cd.rejoin(data.kataId);
  };

  dropDown.hide();

  cancel.click(() => {
    dropDown.slideUp('slow', () => {
      inputId.show()
             .prop('disabled', false)
             .val('')
             .slideDown('fast')
             .focus();
    });
  });


  cd.onlyBase58(inputId);
  inputId.focus()
         .keyup(() => inputIdHandler());

});
//--></script>

<input type="text"
       id="id"
       placeholder="id?"
       size="8"
       value="">
</input>

<div id="drop-down">
  <span id="hi-text"></span>
  <div id="avatar-picker"></div>
  <span id="lo-text"></span>
  <button id="cancel">cancel</button>
</div>
