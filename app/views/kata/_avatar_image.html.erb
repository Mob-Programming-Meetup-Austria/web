
<% if @avatar_name != '' %>
  <img src="/avatar/image/<%= @avatar_index %>"
       alt="<%= @avatar_name %>"
       class="avatar-image"
       id="edit-avatar-image"/>
<% end %>

<script type="text/javascript">
'use strict';
$(() => {

  cd.createTip($('#edit-avatar-image'), "<%= @avatar_name %>");

});
</script>
