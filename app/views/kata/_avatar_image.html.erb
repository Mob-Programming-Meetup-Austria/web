<script type="text/javascript"><!--
'use strict';
$(() => {
  const avatar = $('#avatar-image-opens-dashboard');
  avatar.click(() => {
    const groupId = avatar.data('group-id');
    const url = `/dashboard/show/${groupId}`;
    window.open(url);
  });
  cd.createTip(avatar, 'open a dashboard');
});
//--></script>

<% if @kata.group %>
  <div id="avatar-image-opens-dashboard"
       class="avatar-image"
       data-group-id="<%= @kata.group.id %>">
    <img src="/avatar/image/<%= @kata.avatar_index %>"
         alt="<%= @kata.avatar_name %>"
         class="avatar-image" />
  </div>
<% end %>
