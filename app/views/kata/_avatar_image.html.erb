<script type="text/javascript">
'use strict';
$(() => {

  const avatarIndex = parseInt("<%= @avatar_index %>");
  const $box = $('.avatar-image-box');
  $box.append($('<img>', {
      src:`/images/avatars/${avatarIndex}.jpg`,
      alt:'avatar image',
    class:'avatar-image'
  }));
  cd.setupAvatarNameHoverTip($box, '', avatarIndex, '');

});
</script>

<% if @avatar_index %>
  <div class='avatar-image-box'>
  </div>
<% end %>
