
<script type="text/javascript"><!--

$(() => {

  const avatar = $('#avatar-image-opens-dashboard');

  avatar.click(function() {
    const id = $(this).data('id');
    const url = '/dashboard/show/' + id;
    window.open(url);
  });

  cd.createTip(avatar, 'open a dashboard');

  cd.scrollAvatarImageIntoView = () => {
    $('.avatar-image').scrollIntoView();
  };

  cd.scrollAvatarImageIntoView();

});

//--></script>

<div id="avatar-image-opens-dashboard"
     class="avatar-image"
     data-id="<%= @kata.id %>">
  <img src="/images/avatars/<%= @avatar.name %>.jpg"
       alt="<%= @avatar.name %>"
       class="avatar-image" />
</div>
