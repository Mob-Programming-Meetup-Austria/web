
<script type="text/javascript"><!--

$(function() {

  $('button#ok').click(function() {
    const url = "/kata/edit/<%= @kata_id %>?avatar=<%= @avatar_name %>";
    window.location.href = cd.homePageUrl('<%= @kata_id %>');
    window.open(url);
  });

});

//--></script>


<div id="individual-landing-page">
  <table class="align-center" cellpadding="0" cellspacing="0">
    <tr>
      <td>
        <div class="info">
          <table cellpadding="0" cellspacing="0">
            <tr>
              <td colspan="2">each test run creates a new traffic-light</td>
            </tr>
            <tr><td><img src='/images/bulb_red.png'
                         alt='red traffic-light'
                       class='traffic-light' /></td>
                <td>one or more tests failed</td>
            </tr>
            <tr><td><img src='/images/bulb_amber.png'
                         alt='amber traffic-light'
                       class='traffic-light' /></td>
                <td>something broke, e.g. syntax error</td>
            </tr>
            <tr><td><img src='/images/bulb_green.png'
                         alt='green traffic-light'
                       class='traffic-light' /></td>
                <td>all the tests passed</td>
            </tr>
          </table>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="info">
          click any traffic-light to<br/>
          &bull;&nbsp;review it<br/>
          &bull;&nbsp;revert to it<br/>
          &bull;&nbsp;fork a new session from it
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="info">
          your new session ID is <%= @kata_id[0..5] %><br/>
          <span id="phonetic-kata-id">(<%= @phonetic.join('-')%>)</span><br/>
          you'll need this to come back to this session
      <td>
    </tr>
  </table>

  <div class="align-center">
    <button id="ok">
      ok
    </button>
  </div>

</div>

<%= render partial: 'shared/app_bar_short',
    locals: { help_url: "http://blog.cyber-dojo.org/p/learn-more.html" } %>
