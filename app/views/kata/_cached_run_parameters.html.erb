
<!-- Parameters needed by kata.run_tests() so it can  -->
<!-- avoid hitting the grouper/singler service except -->
<!-- except for singler.ran_tests()                   -->

<input type="hidden"
       name="image_name"
       value="<%= @kata.manifest.image_name %>">

<input type="hidden"
       name="kata_id"
       value="<%= @kata.id %>">

<input type="hidden"
       name="max_seconds"
       value="<%= @kata.manifest.max_seconds %>">

<input type="hidden"
      name="runner_choice"
      value="<%= @kata.manifest.runner_choice %>">

<input type="hidden"
       name="hidden_filenames"
       value='<%= raw @kata.manifest.hidden_filenames %>'>
