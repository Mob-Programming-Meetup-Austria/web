
<script type="text/javascript"><!--

$(function() {

    const button = $('#create-it');

    button.click(function() {
      const setupParams = {
           major: "<%= @major %>",
           minor: "<%= @minor %>",
        exercise: $('[id^=exercises_name_][class~=selected]').data('name')
      };
      const cursor = button.css('cursor');
      button.css('cursor', 'wait');
      button.prop('disabled', true);
      $.getJSON('/setup_default_start_point/save', setupParams, function(dojoParams) {
        const from = "from_setup_<%= @from %>";
        cd.newDojoDialog(dojoParams, from);
        button.css('cursor', cursor);
        button.prop('disabled', false);
      });
    });

});

//--></script>

<button id="create-it" type="button">
set it up
</button>

