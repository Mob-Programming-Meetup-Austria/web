
<script type="text/javascript"><!--

$(function() {

  const button = $('#create-it');

  button.click(function() {
    const setupParams = {
         major: "<%= @language %>",
         minor: "<%= @test %>",
      exercise: $('[id^=exercises_name_][class~=selected]').data('name')
    };
    const cursor = button.css('cursor');
    button.prop('disabled',true).css('cursor','wait');
    $.getJSON('/setup_default_start_point/save', setupParams, function(dojoParams) {
      button.css('cursor', cursor);
      cd.newDojoDialog(dojoParams, 'from_setup');
    });
  });

});

//--></script>

<button type="button" id="create-it">set it up</button>

